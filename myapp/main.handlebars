<html lang="en-US">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Note Taker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous" />
  <link rel="stylesheet" href="/myapp/style.css" />
</head>
<body>
  <nav class="navbar bg-info">
    <a class="navbar-brand text-light p-3" href="/">Note Taker </a>
    <div class="icons">
      <button type="button" class="btn btn-outline-light btn-sm save-note">
        <span class="fas fa-save"></span>
        <span>Save Note</span>
      </button>
      <button type="button" class="btn btn-outline-light btn-sm new-note">
        <span class="fas fa-edit"></span>
        <span>New Note</span>
      </button>
      <button type="button" class="btn btn-sm btn-outline-danger clear-btn">
        <span class="fas fa-times"></span>
        <span>Clear Form</span>
      </button>
      <button type="button" class="btn btn-sm btn-outline-danger delete-note">
        <span class="fas fa-trash"></span>
        <span>Delete Note</span>
      </button>
    </div>
  </nav>
  <div class="container-fluid">
    <div class="row">
      <div class="col-4 list-container" id="list-container">
        <div class="card">
          <ul class="list-group"></ul>
        </div>
      </div>
      <div class="col-8">
        <div class="card">
          <div class="note-title-container">
            <label for="noteTitle">Note Title</label>
            <input class="note-title" id="noteTitle" placeholder="Note Title" maxlength="28" type="text" />
          </div>
          <div class="note-text-container">
            <label for="noteText">Note Text</label>
            <textarea class="note-textarea" id="noteText" placeholder="Note Text"></textarea>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/myapp/index.js"></script>
  <script src="/myapp/server.js"></script>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/myapp/style.css" />
</body>
</html>